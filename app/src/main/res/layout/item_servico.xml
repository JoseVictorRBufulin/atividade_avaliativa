<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground"> <!-- Efeito visual para clique -->

    <TextView
        android:id="@+id/textViewItemNomeEmpregador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Nome do Empregador" />

    <TextView
        android:id="@+id/textViewItemTipoServico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Tipo de Serviço" />

    <TextView
        android:id="@+id/textViewDescricaoservico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Descrição do serviço" />

    <!-- Você pode adicionar mais TextViews aqui para outros campos se desejar -->

</LinearLayout>